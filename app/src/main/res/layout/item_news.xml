<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:weightSum="20"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="14\nDEC"
            android:textColor="@color/grey"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@color/colorPrimary" />

        <com.appsinfinity.fingercricket.customwidget.CNTextView
            android:id="@+id/text_view_news_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:layout_weight="15.75"
            android:text="TITLE"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            app:fontName="Radikal_Medium.ttf"
            android:lineSpacingExtra="2dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@id/main_container"
        android:background="@drawable/drawable_shadow"/>

</RelativeLayout>