<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/black"
        android:scaleType="centerCrop" />

    <com.appsinfinity.fingercricket.customwidget.CNTextView
        android:id="@+id/tv_ad_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_banner"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="12dp"
        android:text="This is test ad for display"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:fontName="Radikal_Regular.ttf" />

    <View
        android:id="@+id/v_ad_link"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/iv_banner"
        android:layout_alignBottom="@id/tv_ad_message"
        android:clickable="true"/>

</RelativeLayout>